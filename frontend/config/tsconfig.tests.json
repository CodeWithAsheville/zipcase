{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tests.tsbuildinfo",
        "types": ["vitest/globals", "node", "@testing-library/jest-dom", "vite/client"],
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strict": false,
        "skipLibCheck": true
    },
    "include": ["../src/**/__tests__/**/*", "../src/**/*.test.ts", "../src/**/*.test.tsx"]
}
